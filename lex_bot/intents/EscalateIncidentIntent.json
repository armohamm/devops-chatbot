{
    "name": "EscalateIncidentIntent",
    "sampleUtterances": [
      "I want to escalate an incident",
      "Escalate incident",
      "i want to escalate an incident with message {message} and priority {priority}",
      "escalate an incident {message} priority {priority}",
      "i escalate an incident with message {message} and priority {priority}",
      "escalate incident message {message} priority {priority}",
      "escalate incident {message} {priority}",
      "escalate incident {message} priority {priority}"
    ],
    "slots": [
      {
          "name": "message",
          "slotConstraint": "Required",
          "slotType": "AMAZON.Actor",
          "valueElicitationPrompt": {
              "messages": [
              {
                  "contentType": "PlainText",
                  "content": "What is the message ? "
              }
              ],
              "maxAttempts": 2
          },
          "priority": 2,
          "sampleUtterances": []
      }, 
      {
        "name": "priority",
          "slotConstraint": "Required",
          "slotType": "AMAZON.Actor",
          "valueElicitationPrompt": {
              "messages": [
              {
                  "contentType": "PlainText",
                  "content": "What is the priority of the incident(low, medium or high)? "
              }
              ],
              "maxAttempts": 2
          },
          "priority": 2,
          "sampleUtterances": []
      }
  ],
    "fulfillmentActivity": {
      "type": "CodeHook",
      "codeHook": {
        "uri": "arn:aws:lambda:eu-west-1:746022503515:function:Escalate_Incident",
        "messageVersion": "1.0"
      }
    },
    "description": "Intent to escalate incident",
    "createVersion": true
  }
  
