{
  "name": "KubernetesIntent",
  "sampleUtterances": [
    "kubernetes",
    "kubectl",
    "cluster"
  ],
  "slots": [
    {
      "name": "resource",
      "slotConstraint": "Required",
      "slotType": "KubernetesResource",
      "valueElicitationPrompt": {
        "messages": [
          {
